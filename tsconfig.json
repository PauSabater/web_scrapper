{
    "extends": "@apify/tsconfig",
    "compilerOptions": {
        "strict": false,
        "module": "ESNext",
        "target": "ESNext",
        "outDir": "dist",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "lib": ["DOM", "ES2021.String"],
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "./node_modules",
        "./node_modules/*",
        "./node_modules/@types/node/index.d.ts",
      ]
}
